{
  "manifest_version": 3,
  "name": "Map Wins Display",
  "version": "1.0",
  "description": "Отображает процент победы на картах в меню комнаты Faceit",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "src/faceit/background.js"
  },
  "action": {
    "default_popup": "src/visual/popup.html",
    "default_icon": "src/icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/faceit/content.js", "src/faceit/popup.js"]
    }
  ]
}
