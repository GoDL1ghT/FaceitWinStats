{
  "manifest_version": 3,
  "name": "FACEIT Forecast",
  "version": "1.0",
  "description": "Удобное расширение для подробной статистики на Faceit",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "src/faceit/background.js"
  },
  "action": {
    "default_popup": "src/visual/popup.html",
    "default_icon": "src/icons/logo.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "256": "src/icons/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.faceit.com/*"],
      "js": ["src/faceit/api.js", "src/faceit/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/visual/tables/team.html",
        "src/visual/tables/player.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
